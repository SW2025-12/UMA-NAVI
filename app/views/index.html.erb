<div class="header-section" style="background: linear-gradient(135deg, #1d6f42 0%, #1e3c72 100%); padding: 60px 0; text-align: center; color: white; margin-bottom: 30px;">
  
  <div style="margin-bottom: 20px;">
    <h1 style="font-size: 3rem; margin: 0; text-shadow: 2px 2px 5px rgba(0,0,0,0.4); font-family: serif;">
      🐎 UMA-NAVI
    </h1>
    <p style="font-size: 1.1rem; opacity: 0.9; margin-top: 10px;">
      国内最大級の競走馬データベース & ファンコミュニティ（Wiki）
    </p>
  </div>

  <div style="margin-top: 30px;">
    <%= form_with url: horses_path, method: :get, local: true do |f| %>
      <div style="background: rgba(255,255,255,0.2); padding: 8px; border-radius: 50px; display: inline-flex; align-items: center; backdrop-filter: blur(5px);">
        <div style="background: white; border-radius: 40px; display: flex; align-items: center; padding: 5px 10px; width: 500px; max-width: 90vw;">
          <%= f.text_field :search, value: @search_term, placeholder: "馬名で検索 または ページ作成...", style: "border: none; outline: none; flex: 1; padding: 10px; font-size: 16px;" %>
          <%= f.button style: "background: #e6b422; color: #333; border: none; border-radius: 30px; padding: 10px 30px; font-weight: bold; cursor: pointer; display: flex; align-items: center; gap: 5px;" do %>
            <span>🔍 検索</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="content-container" style="max-width: 800px; margin: 0 auto; padding: 20px;">
  
  <p style="color: green; text-align: center;"><%= notice %></p>

  <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 30px; border-bottom: 1px solid #ddd; padding-bottom: 15px;">
    <span style="font-size: 24px;">🐴</span>
    <% if @search_term.present? %>
      <h2 style="margin: 0; color: #2c5e2e;">"<%= @search_term %>" の検索結果</h2>
    <% else %>
      <h2 style="margin: 0; color: #2c5e2e;">最近更新されたページ</h2>
    <% end %>
  </div>

  <div id="horses">
    
    <% if @horses.any? %>
      <div style="display: flex; flex-direction: column; gap: 15px;">
        <% @horses.each do |horse| %>
          <div style="background: white; border: 1px solid #e0e0e0; border-radius: 8px; padding: 20px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); display: flex; justify-content: space-between; align-items: center;">
            
            <div>
              <h3 style="margin: 0; font-size: 1.25rem;">
                <%= link_to horse.name, horse, style: "text-decoration: none; color: #333;" %>
              </h3>
              <p style="color: #666; font-size: 0.9rem; margin-top: 5px; margin-bottom: 0;">
                <%= truncate(horse.description, length: 50) || "詳細情報なし" %>